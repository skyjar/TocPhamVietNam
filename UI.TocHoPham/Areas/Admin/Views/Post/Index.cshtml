@model IEnumerable<GetPostViewModel>

<section class="panel">
    <div class="panel-heading">
        <h3>
            Quản lý bài đăng
        </h3>
        <a class="btn btn-rounded btn-secondary-outline margin-inline" href="@Url.Action("AddPost", "Post")">
            <i class="fa fa-plus" aria-hidden="true"></i>&nbsp;&nbsp; Tạo bài đăng
        </a>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-lg-12">
                <br />
                <div class="margin-bottom-50">
                    <table class="table table-hover nowrap" id="example2" width="100%">
                        <thead>
                            <tr>
                                <th>Số thứ tự</th>
                                <th>Tựa đề</th>
                                <th>Tác giả</th>
                                <th>Danh mục</th>
                                <th>Ngày tạo</th>
                                <th>Tùy chọn</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>Số thứ tự</th>
                                <th>Tựa đề</th>
                                <th>Tác giả</th>
                                <th>Danh mục</th>
                                <th>Ngày tạo</th>
                                <th>Tùy chọn</th>
                            </tr>
                        </tfoot>
                        <tbody>
                            @{ int i = 0;}
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@(++i)</td>
                                    <td>@Html.TrundicateString(item.Title, 50)</td>
                                    <td>@item.Author</td>
                                    <td>@Html.TrundicateString(item.CategoryName, 30)</td>
                                    <td>@item.CreatedOn.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        <a class="btn btn-rounded btn-success-outline margin-inline" href="@Url.Action("EditPost", "Post", new { item.Id })">
                                            <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                                        </a>
                                        <a class="btn btn-rounded btn-danger-outline margin-inline" href="@Url.Action("DeletePost", "Post", new { item.Id })">
                                            <i class="fa fa-remove" aria-hidden="true"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>


@section Scripts
{
    <script>
        $(function () {
            $('#example2').DataTable({
                autoWidth: true,
                scrollX: true,
                fixedColumns: true
            });
        });
    </script>
}
