


<section class="panel">
    <div class="panel-heading">
        <h3>
            Quản lý tài khoản
        </h3>
        <a class="btn btn-rounded btn-secondary-outline margin-inline" href="@Url.Action("AddAccount", "Account")">
            <i class="fa fa-plus" aria-hidden="true"></i>&nbsp;&nbsp; Tạo tài khoảng
        </a>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-lg-12">
                <br />
                <div class="margin-bottom-50">
                    <table class="table table-hover nowrap" id="example2" width="100%">
                        <thead>
                            <tr>
                                <th>Số thứ tự</th>
                                <th>Tên đăng nhập</th>
                                <th>Tên tài khoản</th>
                                <th>Email</th>
                                <th>Địa chỉ</th>
                                <th>Số điện thoại</th>
                                <th>Tùy chọn</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>Số thứ tự</th>
                                <th>Tên đăng nhập</th>
                                <th>Tên tài khoản</th>
                                <th>Email</th>
                                <th>Địa chỉ</th>
                                <th>Số điện thoại</th>
                                <th>Tùy chọn</th>
                            </tr>
                        </tfoot>
                        <tbody>
                            @{ int i = 0;}
                            @*@foreach (var item in Model)
                            {*@
                            <tr>
                                <td>@(++i)</td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td>
                                    <a class="btn btn-rounded btn-success-outline margin-inline" href="@Url.Action("EditAccount", "Account", new {  })">
                                        <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                                    </a>
                                    <a class="btn btn-rounded btn-danger-outline margin-inline" href="@Url.Action("DeleteAccount", "Account", new {  })">
                                        <i class="fa fa-remove" aria-hidden="true"></i>
                                    </a>
                                </td>
                            </tr>
                            
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>


@section Scripts
{
    <script>
        $(function () {
            $('#example2').DataTable({
                autoWidth: true,
                scrollX: true,
                fixedColumns: true
            });
        });
    </script>
}