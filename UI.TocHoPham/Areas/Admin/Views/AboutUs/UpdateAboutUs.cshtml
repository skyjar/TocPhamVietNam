@model AboutUsViewModel

<script src="https://unpkg.com/sweetalert2@7.21.1/dist/sweetalert2.all.js"></script>

<section class="panel">
    <div class="panel-heading">
        <h3>Chỉnh sửa giới thiệu</h3>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-lg-12">
                <div class="margin-bottom-50">
                    <form id="skyjar-form" method="post" action="@Url.Action("UpdateAboutUs", "AboutUs")" enctype="multipart/form-data">
                        <div class="form-group row">
                            <div class="col-md-3">
                                <label class="form-control-label" for="l0">Tựa đề</label>
                            </div>
                            <div class="col-md-9">
                                @Html.TextBoxFor(model => model.Title, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-3">
                                <label class="form-control-label" for="l0">Ảnh đại diện</label>
                            </div>
                            <div class="col-md-9">
                                @Html.TextBoxFor(model => model.PhotoFile, new { @class = "form-control", type = "file", id = "coverPhoto", accept = "image/*" })
                                @Html.HiddenFor(model => model.CoverPhoto)
                                <img style="width: 30%; height: 10%" id="img" src="@(Model.CoverPhoto??"https://increasify.com.au/wp-content/uploads/2016/08/default-image.png")" alt="Hình đại diện" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-3">
                                <label class="form-control-label" for="l0">Nội dung</label>
                            </div>
                            <div class="col-md-12">
                                <section class="panel">
                                    <div class="panel-body">
                                        <div class="summernote">@Html.Raw(Model.BodyHtml)</div>
                                    </div>
                                </section>
                            </div>
                            @Html.HiddenFor(model => model.BodyHtml, new { id = "content" })
                            @Html.HiddenFor(model => model.Id, new { value = Model.Id })
                        </div>

                        <div class="form-actions">
                            <div class="form-group row">
                                <button type="button" onclick="SubmitBodyHtml()" class="btn width-150 btn-primary">Lưu</button>
                                <a href="@Url.Action("Index", "Post")"><button type="button" class="btn btn-default">Hủy</button></a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts
{
    <script>
        function SubmitBodyHtml() {
            $("#content").val($('.summernote').summernote('code'));
            document.getElementById('skyjar-form').submit();
            updateAboutUs();
        }

        $(function () {
            $('.summernote').summernote({
                height: 350
            });
        });

        function updateAboutUs(){
            swal(
                    'Thành công',
                    'Hoàn thành thay đổi!',
                    'success'
                )        
        }

        $(function () {
            $('#coverPhoto').change(function () {
                var input = this;
                var url = $(this).val();
                var ext = url.substring(url.lastIndexOf('.') + 1).toLowerCase();
                if (input.files && input.files[0] && (ext == "gif" || ext == "png" || ext == "jpeg" || ext == "jpg")) {
                    var reader = new FileReader();

                    reader.onload = function (e) {
                        $('#img').attr('src', e.target.result);
                    }
                    reader.readAsDataURL(input.files[0]);
                }
                else {
                    $('#img').attr('src', 'https://increasify.com.au/wp-content/uploads/2016/08/default-image.png');
                }
            });

        });
    </script>
}